<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>'>
  <div class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= button_tag(type: :button, class: 'navbar-toggle collapsed',
          data: { toggle: :collapse, target: '#navbar_layout' }) do %>
          <%= content_tag(:span, '', class: 'icon-bar') %>
          <%= content_tag(:span, '', class: 'icon-bar') %>
          <%= content_tag(:span, '', class: 'icon-bar') %>
        <% end %>

        <%= link_to root_path, class: 'navbar-brand text-default-color text-uppercase' do %>
          <strong> Pragmatic Bookshelf </strong>
        <% end %>
      </div>

      <div class="collapse navbar-collapse" id="navbar_layout">
        <ul class="nav navbar-nav navbar-right">
          <li> <%= link_to 'Home', root_path  %></li>
          <li> <%= link_to 'Questions', 'http://www..../faq' %></li>
          <li> <%= link_to 'News', 'http://www..../news' %></li>
          <li> <%= link_to 'Contact', 'http://www..../contact' %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <%= yield %>
  </div>
</body>
</html>
