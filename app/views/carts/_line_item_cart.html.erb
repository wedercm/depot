<div class="container-fluid">
  <% @cart.line_items.each do |line_item| %>
      <div class="row row-eq-height <%= cycle('odd','even') %>">
        <div class="col-lg-3 col-md-3 col-sm-12 border-separator no-padding">
          <%= image_tag(line_item.product.image_url, class:'img-responsive') %>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-12 border-separator">
          <p> <%= link_to(line_item.product.title,line_item.product) %></p>
        </div>

        <div class="col-sm-12 col-lg-3 col-md-3 border-separator">
          <p><strong>Qtd: </strong><%= line_item.quantity %> </p>
        </div>
      </div> 
  <% end %>
    <div class="col-xs-4 pull-right">
        <h3><strong>Total:</strong><%= number_to_currency(@cart.valor_total) %></h3>
    </div>
</div>