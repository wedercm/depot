<p id="notice"><%= notice %></p>

<h2>Your Pragmatic Cart</h2>

<div class="container">
  <% @cart.line_items.each do |line_item| %>
      <div class="row">
        <div class="col-xs-12 col-lg-3 col-md-3 col-sm-3">
          <%= image_tag(line_item.product.image_url, class:'thumbnail') %>
        </div>

        <div class="col-xs-12 col-lg-6 col-md-6 col-sm-6">
          <h4><strong>Nome: </strong><%= line_item.product.title %></h4>
        </div>

        <div class="col-xs-12  col-sm-3 col-lg-3 col-md-3">
          <h4><strong>Qtd: </strong><%= line_item.quantity %> </h4>
        </div>
      </div> 
  <% end %>
    <div class="col-xs-4 pull-right .border">
        <h3><strong>Total:</strong><%= number_to_currency(@cart.valor_total) %></h3>
    </div>
</div>
<ul>
</ul>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>